#include <stdio.h>
#include "holberton.h"

/**
 * _strlen - return len of str
 * @str: sting to count
 *
 * Return: length of string
 */
int _strlen(char *str)
{
	int count = 0;

	for (; *str; str++, count++)
		;
	return (count);
}
/**
 * binary_to_uint - convert a binary numb to an unsigned int
 * @b: binary number
 *
 * Return: unsigned int
 */
unsigned int binary_to_uint(const char *b)
{
	unsigned int uint = 0;
	int len;

	len = _strlen(b);
	for (len--; b && len >= 0; len--)
	{
		if (b[len] != '0' && b[len] != '1')
			return (0);
		uint += b[len] * (1 << len);
	}

	return (uint);
}
